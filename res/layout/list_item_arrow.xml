<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_layout_style" >

    <LinearLayout style="@style/list_item_layout_style" >

        <ImageView
            android:id="@+id/item_head_img"
            style="@style/head_img_style" />

        <RelativeLayout style="@style/list_item_txLayout_style" >

            <ImageView
                android:id="@+id/item_arrow_img"
                style="@style/item_arrow_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/item_arrow_img"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_big_tx"
                    style="@style/list_item_bigTx_style" />

                <TextView
                    android:id="@+id/item_small_tx"
                    style="@style/list_item_bigTx_style" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>